    "version": "0.2.0",
    "configurations": [
         {
            "name": "Debug all testflowkit E2E Tests",
            "type": "go",
            "request": "launch",
            "mode": "debug",
            "program": "${workspaceFolder}/cmd/testflowkit",
            "args": ["run", "-c", "e2e/config.yml", "--env-file", "e2e/env.local.yml"],
            "cwd": "${workspaceFolder}"
        },
         {
            "name": "Debug testflowkit backend E2E Tests",
            "type": "go",
            "request": "launch",
            "mode": "debug",
            "program": "${workspaceFolder}/cmd/testflowkit",
            "args": ["run", "-c", "e2e/config.yml", "--tags", "@API", "--env-file", "e2e/env.local.yml"],
            "cwd": "${workspaceFolder}"
        },
         {
            "name": "Debug testflowkit frontend E2E Tests",
            "type": "go",
            "request": "launch",
            "mode": "debug",
            "program": "${workspaceFolder}/cmd/testflowkit",
            "args": ["run", "-c", "e2e/config.yml", "--tags", "@FRONTEND", "--env-file", "e2e/env.local.yml"],
            "cwd": "${workspaceFolder}"
        },
        {
            "name": "Debug testflowkit E2E Tests by test tag",
            "type": "go",
            "request": "launch",
            "mode": "debug",
            "program": "${workspaceFolder}/cmd/testflowkit",
            "args": ["run", "-c", "e2e/config.yml", "--tags", "@TEST", "--env-file", "e2e/env.local.yml" ],
            "cwd": "${workspaceFolder}"
        }
    ]
}