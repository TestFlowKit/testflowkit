{
  "name": "testflowkit-mock-server",
  "version": "1.0.0",
  "description": "Mock server with validation for TestFlowKit API testing",
  "main": "server.ts",
  "type": "module",
  "scripts": {
    "start": "node --experimental-transform-types simple-server.ts",
    "dev": "nodemon --exec ts-node simple-server.ts",
    "build": "tsc",
    "json-server": "json-server --watch db.json --port 3001 --middlewares ./validation.js"
  },
  "dependencies": {
    "ajv": "^8.12.0",
    "ajv-formats": "^3.0.1",
    "express": "^4.18.2",
    "json-server": "^0.17.4",
    "cors": "^2.8.5"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/json-server": "^0.14.8",
    "@types/node": "^20.10.0",
    "nodemon": "^3.0.1",
    "ts-node": "^10.9.0",
    "typescript": "^5.3.0"
  },
  "keywords": [
    "mock-server",
    "api-testing",
    "validation"
  ],
  "author": "TestFlowKit Team",
  "license": "MIT"
}
